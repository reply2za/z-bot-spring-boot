<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helpHandler" class="hoursofza.commands.client.Help" />
    <bean id="pingHandler" class="hoursofza.commands.client.Ping" />
    <bean id="versionHandler" class="hoursofza.commands.admin.Version" />

    <bean id="messageEventListener" class="hoursofza.listeners.MessageReceivedListener" />

    <bean id="commandService" class="hoursofza.services.CommandService">
        <constructor-arg>
            <set>
                <ref bean="helpHandler"/>
                <ref bean="pingHandler"/>
            </set>
        </constructor-arg>
        <constructor-arg>
            <set>
                <ref bean="versionHandler"/>
            </set>
        </constructor-arg>
    </bean>
</beans>